{
  "id": "16S-pipeline-uhhpc",
  "version": "0.0.2",
  "description": "Analysis pipeline for bacterial 16S data",
  "appType": "BATCH",
  "runtime": "SINGULARITY",
  "runtimeOptions": ["SINGULARITY_RUN"],
  "containerImage": "need to be replaced with 16S container image",
  "jobAttributes": {
    "parameterSet": {
      "appArgs": [ { "arg": "--image_file",
                       "meta": { "name": "arg1" } }
      ],
      "archiveFilter": { "includeLaunchFiles": false }
    },
    "nodeCount": 1,
    "coresPerNode": 1,
    "memoryMB": 1,
    "maxMinutes": 10
  }
}
